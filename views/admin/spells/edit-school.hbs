<div class="pull-right">
    <a href="/admin/spells" class="button hollow primary">
        <i class="fa fa-arrow-left"></i>
    </a>
</div>

<h1 class="text-primary">Edit Spell School</h1>

<div class="row">
    <div class="small-12 large-8 columns">
        <div class="callout">
            <form action="/admin/spells/edit-school/{{ school._id}}" method="post">
                <label>
                    Name:
                    <input type="text" name="name" value="{{ school.name }}"/>
                </label>
                <p>Allied Schools</p>
                <div class="row">
                    {{#each other_schools}}
                        <div class="columns">
                            <label>
                                <input type="checkbox" name="allied_schools[]" value="{{ _id }}" {{#if allied}}checked="checked"{{/if}}/>
                                {{ name }}
                            </label>
                        </div>
                    {{/each}}
                </div>
                <label>
                    Opposed School:
                    <select name="opposed_school">
                        <option value="">Choose a school...</option>
                        {{#each other_schools}}
                            <option value="{{ _id }}" {{#if opposed }}selected="selected"{{/if}}>{{ name }}</option>
                        {{/each}}
                    </select>
                </label>
                <div class="text-right">
                    <button type="submit" class="button primary">
                        <i class="fa fa-pencil"></i> Edit School
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
