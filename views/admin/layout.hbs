<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <link href="https://fonts.googleapis.com/css?family=IM+Fell+English|Lato" rel="stylesheet" />
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
    <div class="main-container row expanded">
        <section class="main medium-order-2 small-12 medium-9 large-10 columns">
            {{#with message }}
                <div class="callout {{ severity }}">{{ text }}</div>
            {{/with}}
            {{{body}}}
        </section>
        <section class="sidebar-menu medium-order-1 small-12 medium-3 large-2 columns">
            <div class="text-center">
                <a href="/">
                    <img src="/images/frostgrave-banner.png" alt="Frostgrave"/>
                    <h6 class="text-secondary">Frostgrave Roster Management</h6>
                </a>
                <a href="/admin">
                    <h3 class="text-alert">Admin</h3>
                </a>
            </div>
            <ul class="menu vertical">
                {{#each adminPages }}
                    <li {{#if active}}class="active"{{/if}}>
                        <a href="{{ url }}">{{ label }}</a>
                    </li>
                {{/each}}
            </ul>
        </section>
    </div>
</body>
</html>